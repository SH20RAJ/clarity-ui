{
    "name": "clarity-ui-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "deploy": "cd apps/docs && bun run build && npx wrangler pages deploy out --project-name clarity-ui"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^1.12.4",
        "typescript": "^5.4.2"
    },
    "packageManager": "bun@1.3.1",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}